<div class="jumbotron">
    <h1>Manual Cave Segmentation Web Service</h1>    
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Upload new Cave</h2>
        <form method="post" enctype="multipart/form-data" action="~/api/Caves">
            <div>
                <label for="name">Cave Name: </label>
                <input name="name" type="text" />
            </div>
            <div>
                <label for="pass">Password: </label>
                <input name="pass" type="text" />
            </div>
            <div>
                <label for="file">Binary Cave File: </label>
                <input name="file" type="file" />
            </div>
            <div>
                <input type="submit" value="Submit" />
            </div>
        </form>
    </div>    
</div>
